<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Levels">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="50dp"
            android:background="#00ffffff"
            android:src="@drawable/h1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="صفحة التلوين"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/img"
            android:layout_width="400dp"
            android:layout_height="390dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp" />

        <ImageButton
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/eraser"
            android:background="#00ffffff"
            android:src="@drawable/save" />

        <ImageButton
            android:id="@+id/eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pen"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/pen"
            android:background="#00ffffff"
            android:src="@drawable/er" />

        <ImageButton
            android:id="@+id/pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/brush"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/brush"
            android:background="#00ffffff"
            android:src="@drawable/pen" />

        <ImageButton
            android:id="@+id/brush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="#00ffffff"
            android:src="@drawable/b" />

        <ImageView
            android:id="@+id/colorPicker"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/save"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/save"
            android:src="@drawable/d" />

    </RelativeLayout>
</LinearLayout>


